<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Labwork_13.Update_emp"
             Title="Update">
    <VerticalStackLayout>
        <Label 
        Text="Name"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Entry x:Name="nam" TextColor="White"/>

        <Label 
        Text="Post"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Entry x:Name="po" Placeholder="" />

        <Button Text="Update" Clicked="Upd"/>

        <Button Text="Delete" Clicked="Del"/>

        <Button Text="Back" Clicked="Bac"/>
    </VerticalStackLayout>
</ContentPage>